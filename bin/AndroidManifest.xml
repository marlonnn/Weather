<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.lmw.weather"
    android:versionCode="5"
    android:versionName="2.0.3" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />

    <application
        android:name="org.lmw.weather.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar" 
        android:configChanges="orientation|screenSize"
        >
        <activity
            android:name="org.lmw.weather.Weather"
            android:label="@string/app_name" 
            android:configChanges="orientation|screenSize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.lmw.weather.TrendWeek" 
            android:configChanges="orientation|screenSize"
            >
        </activity>
        <activity android:name="org.lmw.weather.CityList" 
            android:configChanges="orientation|screenSize"
            >
        </activity>

        <!-- 声明widget对应的AppWidgetProvider -->
        <receiver android:name="org.lmw.weather.widget.ExampleAppWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="org.lmw.weather.UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/example_appwidget_info" />
        </receiver>

        <service android:name="org.lmw.weather.widget.ExampleAppWidgetService" >
            <intent-filter>
                <action android:name="android.appwidget.action.EXAMPLE_APP_WIDGET_SERVICE" />
            </intent-filter>
        </service>
    </application>

</manifest>